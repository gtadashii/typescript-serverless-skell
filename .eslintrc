{
  "env": {
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:jest/all"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": "off",
    "semi": "off"
  },
  "plugins": [
    "jest"
  ]
}